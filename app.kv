#:import hex kivy.utils.get_color_from_hex

<Tabela@BoxLayout>:
    orientation: 'horizontal'
    col1: 'column1'
    col2: 'column2'
    col3: 'column3'
    col4: 'column4'
    col5: 'column5'
    col6: 'column6'
    col7: 'column7'

    Label:
        id: label1
        text: root.col1
    Label:
        id: label2
        text: root.col2
    Label:
        id: label3
        text: root.col3
    Label:
        id: label4
        text: root.col4
    Label:
        id: label5
        text: root.col5
    Label:
        id: label6
        text: root.col6
    Label:
        id: label7
        text: root.col7

<RV>:
    viewclass: 'Tabela'
    RecycleBoxLayout:
        default_size: None, dp(20)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<Btn@Button>:
    background_normal:
    background_color: hex('#000000')

<BtnVoltar@Button>:
    text:'Menu'
    size_hint_y: '0.02dp'
    size_hint_x: 0.1
    on_press:
        app.root.transition.direction = 'right'
        app.root.current = 'home'

<LabelTable@Label>:
    font_size: 20
    size_hint_y: 0.001
    background_color: 1, 1, 1, 1
    background_normal: ""
    canvas.before:
        Color:
            rgba: 1, 1, 0, 1
        Line:
            width: 0.9
            rectangle: self.x, self.y, self.width, self.height

<LabelRow@Label>:
    font_size: 25
    size_hint_y: '0.08dp'
    canvas.before:
        Color:
            rgba: hex('#FFFFFF')
        Rectangle:
            size:self.size
            pos:self.pos
        Color:
            rgba: 1, 1, 0, 1
        Line:
            width: 0.9
            rectangle: self.x, self.y, self.width, self.height


<Screens>:
    AppWindow:
        name: 'home'
    PesquisarWindow:
        name: 'pesquisar_window'
    MostrarWindow:
        name: 'mostrar_window'
    FaltosasWindow:
        name: 'faltosas_window'
<AppWindow>:
    canvas.before:
        Color:
            rgba: hex('#FFD700')
        Rectangle:
            size:self.size
            pos:self.pos    
    
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint_y: 0.3
            text: "Controle de Estoque Loja SD"
            font_size: 50
            color: 0 , 0 , 0 , 1
                   
        BoxLayout:
            orientation:'vertical'
            
            Btn:
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                text: "Pesquisar Modelos"
                font_size: 20
                size_hint_x: 0.45
                size_hint_y: 0.07
                on_press: 
                    app.root.transition.direction = 'right'
                    app.root.current = 'pesquisar_window'
        
            Btn:
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                text: "Peças Faltosas"
                font_size: 20
                size_hint_x: 0.45
                size_hint_y: 0.07
                on_press: 
                    app.root.transition.direction = 'right'
                    app.root.current = 'faltosas_window'

            Btn:
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                size_hint_x: 0.45
                text: "Mostrar Estoque"
                font_size: 20
                size_hint_y: 0.07
                on_press: 
                    app.root.transition.direction = 'right'
                    app.root.current = 'mostrar_window' 

        Image:
            pos_hint: {'center_x': 0.92,'center_y': 0.0}
            source: 'images/LogoSD.png'
            size_hint_y: 0.165
        Label:
            size_hint_y:0.01

<FaltosasWindow>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: hex('#FFD700')
            Rectangle:
                size:self.size
                pos:self.pos
        Label:
            size_hint_y: 0.2
            text: 'Escolha o grau de importância:'
            font_size: 40
            color: 0,0,0,1
        Btn:
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            size_hint_x: 0.45
            text: "Grau de Importânca Alto"
            font_size: 20
            size_hint_y: 0.07
        Btn:
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            size_hint_x: 0.45
            text: "Grau de Importânca Médio"
            font_size: 20
            size_hint_y: 0.07
        Btn:
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            size_hint_x: 0.45
            text: "Grau de Importânca Médio Baixo"
            font_size: 20
            size_hint_y: 0.07
        Btn:
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            size_hint_x: 0.45
            text: "Grau de Importânca Baixo"
            font_size: 20
            size_hint_y: 0.07
        Label:
            size_hint_y: 0.05
        BtnVoltar:

<PesquisarWindow>:

    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: hex('#FFD700')
            Rectangle:
