#:import hex kivy.utils.get_color_from_hex

<Btn@Button>:
    background_normal:
    background_color: hex('#000000')

<Screens>:
    AppWindow:
        name: 'home'
    PesquisarWindow:
        name: 'pesquisar_window'
<AppWindow>:
    canvas.before:
        Color:
            rgba: hex('#FFD700')
        Rectangle:
            size:self.size
            pos:self.pos    
    
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint_y: 0.3
            text: "Controle de Estoque Loja SD"
            font_size: 50
            color: 0 , 0 , 0 , 1
                
        BoxLayout:
            orientation:'vertical'
            
            Btn:
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                text: "Pesquisar Modelos"
                font_size: 20
                size_hint_x: 0.45
                size_hint_y: 0.07
                on_press: 
                    app.root.transition.direction = 'right'
                    app.root.current = 'pesquisar_window'
        
            Btn:
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                text: "Peças Faltosas"
                font_size: 20
                size_hint_x: 0.45
                size_hint_y: 0.07
                

            Btn:
                pos_hint: {'center_x': 0.5,'center_y': 0.5}
                size_hint_x: 0.45
                text: "Mostrar Estoque"
                font_size: 20
                size_hint_y: 0.07   
        Label:
            size_hint_y: 0.165

<PesquisarWindow>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: hex('#FFD700')
            Rectangle:
                size:self.size
                pos:self.pos

        BoxLayout:
            Label:
                pos_hint: {'center_x': 0.5,'center_y': 0.9}
                text:'Sua pesquisa: '
                font_size: 30
                color: 1 , 1 , 1 , 1
                size_hint_y: 0.07
                size_hint_x:0.2
            TextInput:
                pos_hint: {'center_x': 0.5,'center_y': 0.9}
                id: pesquisa    
                size_hint_y: 0.13
                size_hint_x:0.6
                font_size: 20
                multiline: False
            Label:
                size_hint_x: 0.01
        BoxLayout:
    GridLayout:
        rows: 10
        cols: 7
        Label:
            text: 'Id'
        Label:
            text: 'Marca'
        Label:
            text: 'Modelo'
        Label:
            text: 'Cor'
        Label:
            text: 'Quantidade'
        Label:
            text: 'Grau de Importância'
        Label:
            text: 'Caixa'
        BoxLayout:
        
                            
