<PesquisarWindow>:

    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: hex('#FFD700')
            Rectangle:
                size:self.size
                pos:self.pos

        BoxLayout:
            Label:
                size:self.size
                pos:self.pos
                pos_hint: {'center_x': 0.5,'center_y': 0.9}
                text:'Sua pesquisa: '
                font_size: 30
                color: 0 , 0 , 0 , 1
                size_hint_y: 0.07
                size_hint_x:0.02

            TextInput:
                pos_hint: {'center_x': 0.5,'center_y': 0.9}
                id: pesquisa          
                size_hint_y: 0.13
                size_hint_x:0.09
                font_size: 20
                multiline: False
            Button:
                pos_hint: {'center_x': 0.5,'center_y': 0.9}
                size_hint_y: 0.13
                size_hint_x:0.1
                id: pesquisar_btn
                text:'Pesquisar'
                on_release: 
                    app.root.pesquisar(pesquisa.text)
                size_hint_x: 0.01
        BoxLayout:
            RVPesquisar:     

        BoxLayout:
    BtnVoltar:
        size_hint_y:0.035